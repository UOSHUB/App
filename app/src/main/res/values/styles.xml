<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/UOSHUB_accent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">46dp</item>
    </style>

    <style name="UOSHUB_theme" parent="AppTheme">
        <item name="colorPrimary">@color/UOSHUB_accent</item>
        <item name="colorPrimaryDark">@color/UOSHUB_Primary</item>
        <item name="android:colorForeground">@color/UOSHUB_foreground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

</resources>